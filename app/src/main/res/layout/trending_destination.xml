<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_trending"
    android:layout_width="wrap_content"
    android:layout_marginRight="16dp"
    android:layout_height="wrap_content"
    style="@style/subGeneral">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_trending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_airport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_trending"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            style="@style/title_treding"
            android:text="Flight ID"
            android:textStyle="bold"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/fligSubEdit"
            android:layout_below="@id/img_trending"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Airport Name"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/txt_country"
            style="@style/fligSubEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_airport"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:text="Country"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>





