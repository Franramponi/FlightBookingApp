<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/general"
    android:orientation="vertical"
    android:layout_marginTop="70dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/image_header_drawer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/image_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/hello_header_drawer"
                style="@style/txtSubEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_hello_header_drawer" />

            <TextView
                android:id="@+id/txt_username_header_drawer"
                style="@style/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_profile" />


        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/divisor_profile"
        android:layout_marginLeft="25dp"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</LinearLayout>