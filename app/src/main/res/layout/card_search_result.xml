<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    style="@style/general"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:contentDescription="Logo de la aerolínea"
                    android:scaleType="centerCrop"
                    style="@style/fondoLogo"
                    android:src="@drawable/ic_airline_logo" />

                <TextView
                    android:id="@+id/name_airline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="United Airlines"
                    android:textColor="#7E8B97"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <ImageView
                    android:id="@+id/durationImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Ícono de duración"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_timer" />

                <TextView
                    android:id="@+id/duration_airline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="01 hr 40min"
                    android:textColor="#7E8B97"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/id_Origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EZE"
                    style="@style/styleCardResult" />

                <TextView
                    android:id="@+id/txt_Origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ezeiza Ar"
                    style="@style/txtSubEdit3" />

            </LinearLayout>

            <ImageView
                android:id="@+id/airplaneImg"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:contentDescription="Ícono de avión"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_traveling_airline" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/id_Destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAX"
                    style="@style/styleCardResult" />

                <TextView
                    android:id="@+id/txt_Destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Los Angeles"
                    style="@style/txtSubEdit3" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F9FB"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/name_class"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/chair"
                    android:drawablePadding="8dp"
                    android:text="Business Class"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fromPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/from"
                        android:textAlignment="viewEnd" />

                    <TextView
                        android:id="@+id/id_price"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="$1128"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_viewDetails"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                style="@style/fondoBoton"
                android:text="@string/view_details" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
