<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TP3_Belgrano_A_Grupo4" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/light_blue</item>
    </style>
    <style name="titleViewEdit">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtSubEdit">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="txtDesProfile" parent="txtSubEdit">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="profileImageRound">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:clipToOutline" tools:targetApi="s">true</item>
        <item name="android:scaleType">centerCrop</item> <!-- Escala y recorta la imagen -->
        <!-- Fondo redondeado -->
    </style>

    <style name="titleTextScreenDev">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="descriptionTextScreenDev">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="profileItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="profileIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="profileIconNew" parent="profileIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

    <style name="profileText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>